
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@model DTO.GeneralDTO
<!-- ##### Vizew Post Area Start ##### -->
<!--Url.RouteUrl("PostDetail",new{ID=item.ID,CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName),SeoLink=item.SeoLink})-->
<section class="vizew-post-area mb-50">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-7 col-lg-8">
                <div class="all-posts-area">
                    <!-- Section Heading -->
                    <div class="section-heading style-2">
                        <h4>Featured Videos</h4>
                        <div class="line"></div>
                    </div>

                    <!-- Featured Post Slides -->
                    <div class="featured-post-slides owl-carousel mb-30">
                        @foreach (var item in Model.SliderPost)
                        {
                            <div class="single-feature-post video-post bg-img" style="background-image: url(/Areas/Admin/Content/PostImage/@item.ImagePath);">
                                <!-- Play Button -->
                                <!-- Post Content -->
                                <div class="post-content">
                                    <a href="@Url.RouteUrl("Category",new{@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName)})" class="post-cata">@item.CategoryName</a>
                                    <a href="@Url.RouteUrl("PostDetail",new{@ID=item.ID,@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink})" class="post-title">@item.Title</a>
                                    <div class="post-meta d-flex">
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @item.CommentCount</a>
                                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>@item.ViewCount</a>
                                    </div>
                                </div>
                            </div>

                        }
                        <!-- Single Feature Post -->
                        <!-- Single Feature Post -->

                    </div>



                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <!-- Section Heading -->
                            <div class="section-heading style-2">
                                <h4>Most Viewed Training</h4>
                                <div class="line"></div>
                            </div>

                            <!-- Sports Video Slides -->
                            <div class="sport-video-slides owl-carousel mb-50">
                                @foreach (var item in Model.MostViewedPost)
                                {
                                    <!-- Single Blog Post -->
                                    <div class="single-post-area">
                                        <!-- Post Thumbnail -->
                                        <div class="post-thumbnail">
                                            <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" />
                                        </div>
                                        <!-- Post Content -->
                                        <div class="post-content">
                                            <a href="@Url.RouteUrl("Category",new{@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName)})" class="post-cata cata-sm cata-success">@item.CategoryName</a>
                                            <a href="@Url.RouteUrl("PostDetail",new{@ID=item.ID,@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink})"class="post-title">@item.Title</a>
                                            <div class="post-meta d-flex">
                                                <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount</a>
                                                <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>@item.ViewCount</a>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                        <!--Popular Trainings-->
                        <div class="col-12 col-lg-6">
                            <!-- Section Heading -->
                            <div class="section-heading style-2">
                                <h4>Popular Trainings</h4>
                                <div class="line"></div>
                            </div>

                            <!-- Business Video Slides -->
                            <div class="business-video-slides owl-carousel mb-50">
                                <!-- Single Blog Post -->
                                @foreach (var item in Model.PopularPost)
                                {
                                <div class="single-post-area">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath">
                                    </div>

                                    <!-- Post Content -->
                                    <div class="post-content">
                                        <a href="@Url.RouteUrl("Category", new { @CategoryName = BLL.SeoLink.GenerateUrl(item.CategoryName) })" class="post-cata cata-sm cata-primary">@item.CategoryName</a>
                                        <a href="@Url.RouteUrl("PostDetail",new{@ID=item.ID,@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink})" class="post-title">@item.Title</a>
                                        <div class="post-meta d-flex">
                                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount</a>
                                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>@item.ViewCount</a>
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-5 col-lg-4">
                <div class="sidebar-area">
                    <hr />
                    <div class="single-widget mb-50">
                        <!-- Section Heading -->
                        <div class="section-heading style-2 mb-30">
                            <h4>Breaking Trainings</h4>
                            <div class="line"></div>
                        </div>
                        @foreach (var item in Model.BreakingPost)
                        {
                            <!-- Single Blog Post -->
                            <div class="single-blog-post d-flex">
                                <div class="post-thumbnail">
                                    <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" />
                                </div>
                                <div class="post-content">
                                    <a href="@Url.RouteUrl("PostDetail",new{@ID=item.ID,@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink})" class="post-title">@item.Title</a>
                                    <div class="post-meta d-flex justify-content-between">
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount</a>
                                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>@item.ViewCount</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- ***** Single Widget ***** -->
                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget add-widget mb-50">
                        <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImages/@Model.Adslist[0].ImagePath" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Vizew Psot Area End ##### -->
<div class="row">
    <div class="col-12">
        <div class="section-heading">
            <a href="@Model.Adslist[1].Link">
                <img src="~/Areas/Admin/Content/AdsImages/@Model.Adslist[1].ImagePath" />
            </a>
        </div>
    </div>
</div>
<!-- ##### Trending Posts Area Start ##### -->
<section class="trending-posts-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Heading -->
                <div class="section-heading">
                    <h4>Trending Videos</h4>
                    <div class="line"></div>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model.Videos)
            {
                <!-- Single Blog Post -->
                <div class="col-12 col-md-4">
                    <div class="single-post-area mb-80">
                        <!-- Post Thumbnail -->
                        <div class="post-thumbnail">
                            @Html.Raw(item.VideoPath)
                        </div>

                        <!-- Post Content -->
                        <div class="post-content">
                            <a href="@item.OriginalVideoPath" target="_blank" class="post-title">@item.Title</a>
                            <p>@item.AddDate.ToString("dd.MM.yyyy,dddd")</p>
                        </div>
                    </div>
                </div>

            }


        </div>

    </div>
</section>
<!-- ##### Trending Posts Area End ##### -->