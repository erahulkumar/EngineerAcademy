    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
                "ordering": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            GetCounts();
        });
    </script>
    <script type="text/javascript">
        setInterval(function () {
            GetCounts();
        },10000
        );
    </script>
    <script type="text/javascript">
        $(document).ready(function () { });
        function GetCounts() {
            $.ajax({
                url: "@Url.Action("GetCounts","Post")",
                type: "POST",
                success: function (result) {
                    $("#CommentCount").html(result.CommentCount);
                    $("#MessageCount").html(result.MessageCount);
                }
            })
        }
    </script>
