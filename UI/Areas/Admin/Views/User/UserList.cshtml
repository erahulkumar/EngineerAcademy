
@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model List<DTO.UserDTO>
<section class="content-header">
    <h2>User List</h2>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>User</a></li>
        <li class="breadcrumb-item"><a>User List</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button class="btn btn-primary" onclick="window.location.href='/Admin/User/AddUser'">Add User</button>
</div>
<br />
<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>E-mail</th>
                    <th>User Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.ID">
                        <td>@item.Name</td>
                        <td>
                            @item.Username
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            <img src="~/Areas/Admin/Content/UserImage/@item.ImagePath" width="128" height="128" />
                        </td>
                        <td align="center" valign="middle">
                            <a href="/Admin/User/UpdateUser/@item.ID">
                                <br />
                                <img style="height:16px;width:16px;" src="~/Areas/Admin/Content/icon/icons-update.gif" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <img onclick="AskQuestion('/Admin/User/DeleteUser/',@item.ID)" style="height:16px;width:16px;" src="~/Areas/Admin/Content/icon/delete-icon.png" />
                            </a>
                        </td>
                    </tr>


                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>E-mail</th>
                    <th>User Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/js/DeleteRecord.js"></script>