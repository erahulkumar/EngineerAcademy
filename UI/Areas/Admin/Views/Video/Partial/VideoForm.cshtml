@model DTO.VideoDTO
<div class="box-body">
    <div class="form-group">
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Title" })
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.OriginalVideoPath, new { @class = "form-control", @placeholder = "Video" })
        @Html.ValidationMessageFor(x => x.OriginalVideoPath)
    </div>
    <input type="number" hidden value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
