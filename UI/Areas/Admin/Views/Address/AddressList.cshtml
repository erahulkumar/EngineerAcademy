
@{
    ViewBag.Title = "AddressList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.AddressDTO>

<div class="content-header">
    <h2>Address List</h2>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Address</a></li>
        <li class="breadcrumb-item"><a>Address List</a></li>
    </ol>
</div>
<br />
<div class="card-footer">
    <button class="btn btn-primary" onclick="window.location.href='/Admin/Address/AddAddress'">Add Address</button>
</div>
<br />
<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>E-Mail</th>
                    <th>Mobile No.</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.ID">
                        <td>@item.AddressContent</td>
                        <td>
                            @item.Email
                        </td>
                        <td>@item.Phone</td>
                        <td align="center" valign="middle">
                            <a href="/Admin/Address/UpdateAddress/@item.ID">
                                <br />
                                <img style="height:16px;width:16px;" src="~/Areas/Admin/Content/icon/icons-update.gif" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <img style="height:16px;width:16px;" onclick="AskQuestion('/Admin/Address/DeleteAddress/',@item.ID)" src="~/Areas/Admin/Content/icon/delete-icon.png" />
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Address</th>
                    <th>E-Mail</th>
                    <th>Mobile No.</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/js/DeleteRecord.js"></script>
<!-- /.card -->
